---
import Layout from '@layouts/Default.astro';
import DonutChart from 'src/components/DonutChart.astro';
import LargeNumber from 'src/components/LargeNumber.astro';

const colors = ['bg-pink', 'bg-blue', 'bg-green', 'bg-yellow', 'bg-purple'];
const randomColor = colors[Math.floor(Math.random() * colors.length)];
---

<Layout
  title='Dashboard'
  pageTitle='Stoorybook | Dashboard'
  description='Dashboard page'
>
  <main class={`${randomColor} p-6 min-h-screen flex flex-col items-center gap-8`}>
    <div class="max-w-7xl mx-auto">
      <header class="mb-8">
        <h1 class="text-6xl font-bold text-gray-800 mb-2">Dashboard</h1>
        <p class="text-2xl text-gray-600">Welcome to your Storybook analytics</p>
      </header>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <DonutChart title="Completion Rate for Today" percentage={75} />
        <LargeNumber title="Stories Generated" number="1000" />
        <LargeNumber title="Emotions Solved" number="500" />
      </div>
    </div>
  </main>
</Layout>

<style is:global>
  /* Add any global styles here */
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>